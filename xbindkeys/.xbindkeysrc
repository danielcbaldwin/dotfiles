#########################
# Actions               #
#########################

# Check for different display configuration
"autorandr --change --default laptop"
  F8

# Screenshot
"scrot -s -e 'mv $f ~/Pictures/Screenshots/'"
  Mod4 + Shift + 4

# Lock
"xscreensaver-command -lock"
  Mod4 + l


#########################
# Media Keys            #
#########################

# Play/Pause
"playerctl play-pause"
  XF86AudioPlay

# Next
"playerctl next"
  XF86AudioNext

# Previous
"playerctl previous"
  XF86AudioPrev

# Stop
"playerctl stop"
  XF86AudioStop


#########################
# Volume Keys           #
#########################

# Volume Up
"~/.config/openbox/volume.sh up"
  XF86AudioRaiseVolume

# Volume Down
"~/.config/openbox/volume.sh down"
  XF86AudioLowerVolume

# Mute
"~/.config/openbox/volume.sh toggle"
  XF86AudioMute


#########################
# Backlight  Keys       #
#########################

# Brightness Up
"light -A 5"
  XF86MonBrightnessUp

# Brightness Down
"light -U 5"
  XF86MonBrightnessDown


#########################
# Launch Apps           #
#########################

# Terminal
"urxvt"
  Mod4 + Return

# rofi - Window
"rofi -show run"
  Mod4 + r

# rofi - Window
"rofi -show window"
  Mod4 + w

# Synapse
"synapse"
  Control + space


